<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epicodus.myspace.UserPageActivity"
    android:background="@color/colorPrimaryText">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tom Hardy"
            android:id="@+id/textView2"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/colorTextIcons"
            android:textSize="35sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout2">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:id="@+id/imageView2"
            android:src="@drawable/profile"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editText3"
            android:text="@string/male38_years_hammersmith_london"
            android:textColor="@color/colorTextIcons"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_marginLeft="61dp"
            android:layout_marginStart="61dp" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:weightSum="3">

        <Button
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:text="Moar Pics!!!"
            android:id="@+id/morePicsButton"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimaryLight" />

        <Button
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:text="Tom's Friends"
            android:id="@+id/friendsButton"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimaryLight" />

        <Button
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:text="Contact"
            android:id="@+id/contactButton"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimaryLight" />
    </LinearLayout>


</RelativeLayout>
